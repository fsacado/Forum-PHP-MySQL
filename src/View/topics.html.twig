{% extends 'base.html.twig' %}

{% block body %}


    <table class="table table-striped table-bordered">
    <thead>
        <tr class="font-size-13">
            <th scope="col">Sujet</th>
            <th scope="col" class="center">Auteur du sujet</th>
            <th scope="col" class="center">Nombre de r√©ponses</th>
            <th scope="col" class="center">Date du dernier message</th>
        </tr>
    </thead>
    {% set i = 0 %}
    <tbody>
    {% for topic in topics %}   
        <tr scope="row">
            <td>{{ topic }}</td>
            <td class="center">{{ authors[i] }}</td>
            <td class="center">{{ messageNumbers[i] }}</td>
            <td class="center">
                <span class="font-size-12">{{ lastDateAuthor[i]['publication_date'] }}</span>
                {% if lastDateAuthor[i]['username'] %}
                    <span class="font-size-12 font-weight-600 block">par {{ lastDateAuthor[i]['username'] }}</span>
                {% else %}
                    <span class="font-size-12 block">{{ lastDateAuthor[i] }}</span>  
                {% endif %}
            </td>
        </tr>
        {% set i = i + 1 %}
    {% endfor %}
    </tbody>

</table>



{% endblock %}